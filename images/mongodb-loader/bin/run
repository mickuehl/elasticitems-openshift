echo "Use 'oc rsh <pod name>' and connect to the container to load the data using e.g. 'mongoimport'"
echo ""
echo "Example: mongoimport -h <host> -u <user> -p <password> -d <database> files"

# Just loop to keep the container alive and allow to 
# connect to the running container and deploy stuff manually 
# if needed.

while true
do
	sleep 2
done